 @using ChatRoom.Datos.Entidades
 @model List<ChatRoom.Datos.Entidades.Venta>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mis Compras - ChatRoom</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <h2>Mis Compras</h2>
        <div class="row">
            <div class="col-md-12">
                @if (Model != null && Model.Count > 0)
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID Producto</th>
                                <th>ID Vendedor</th>
                                <th>Monto</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var compra in Model)
                            {
                                <tr>
                                    <td>@compra.IdProducto</td>
                                    <td>@compra.IdVendedor</td>
                                    <td>@compra.Monto</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No se encontraron compras.</p>
                }
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
