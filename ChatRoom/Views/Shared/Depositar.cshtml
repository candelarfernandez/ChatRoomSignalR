@using ChatRoom.Models
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<style>
    body {
        background-image: url('../images/depositar.png');
        background-size: cover;
        background-position: center;
    }
</style>

<div class="login-container">
    <h2 class="display-4 mt-5 text-center">Depositar</h2>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-auto">
                <div class="login-form">
                    <form method="post" action="~/Usuario/Depositar" class="py-3 lh-sm mb-3 m-lg-2">
                        <div class="form-group">
                            <label for="Monto">Monto</label>
                            <input type="number" class="form-control" id="Monto" name="Monto" required />

                           
                        </div>
                        <button type="submit" class="btn mt-2" style="background-color:#cc99ff;">Depositar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
