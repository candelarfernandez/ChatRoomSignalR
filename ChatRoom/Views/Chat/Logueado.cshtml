@using ChatRoom.Datos.Entidades
@model List<Sala>

@{
    var authenticatedUser = ViewData["AuthenticatedUser"] as Usuario;
}

<section class="d-flex vh-100">
    <article class="col-3 d-flex flex-column" style="background-color: #C5C3FC;">
        <div class="mb-auto text-center">
            <h2 class="mt-3 d-flex align-items-center justify-content-center">
                <span>Subastas Activas</span>
                <button id="nuevaSubastaBtn" type="button" class="btn ms-2" style="background-color: #E8E2FF;" data-is-authenticated="@User.Identity.IsAuthenticated.ToString().ToLower()">+</button>
            </h2>
            @if (Model.Count == 0)
            {
                <div id="mensajeSubastasNull">
                    <p>En este momento no hay subastas activas</p>
                </div>
            }
            <ul id="salasList" class="list-group">
                <!-- Aquí se agregan dinámicamente los elementos de la lista -->
            </ul>
        </div>

        @*<div class="list-group list-group-flush border-top scrollarea mt-auto">
        <small class="text-md-center">Estas Logueado, querés cerrar sesion?</small>
        <a href="javascript:void(0);" id="logoutLink" onclick="document.getElementById('logoutForm').submit();" class="btn btn-link">Logout</a>
        </div>*@
        @*        <form id="logoutForm" action="~/Account/Logout" method="post" style="display:none;"></form>
        *@
    </article>

    <article class="col-6"></article>

    <div id="nuevaSubastaFormContainer" class="d-none col-3" style="background-color: #C5C3FC;">
        <h2 class="mt-3">Nueva Subasta</h2>
        <form id="createSalaForm" action="/Chat/Room/CreateRoom" method="post" class="py-3 lh-sm mb-3 m-lg-2" enctype="multipart/form-data">
            <div class="form-group">
                <label for="nombre">Nombre de la sala</label>
                <input type="text" class="form-control" id="nombre" name="nombre" required />

                <label for="fotoProductoNombre">Nombre de la imagen del producto</label>
                <input type="file" class="form-control" id="fotoProductoNombre" name="fotoProductoNombre" required />
            </div>
            @if (authenticatedUser != null)
            {
                <input type="hidden" id="idVendedor" name="idVendedor" value="@authenticatedUser.Id" />
            }
            <button id="cancelarSubastaBtn" type="button" class="btn btn-secondary mt-2 ml-2 align-items-center">Cancelar</button>
            <button type="submit" class="btn mt-2 align-items-center" style="background-color: #E8E2FF;">Crear subasta</button>
        </form>
    </div>
   
</section>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
<script src="~/js/Subasta.js"></script>